<% if user_signed_in? %>
  </br>
  <%= link_to "New friend", new_friend_path, class:'btn btn-secondary'%>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <div id="friends">
          <% @friends.each do |friend| %>
            <% if friend.user_id == current_user.id %>
            <tr>
              <%= render friend %>
              <th>
                <%= link_to "Show this friend", friend %>
              </th>
            </tr>
            <% end %>
          <% end %>
      </div>
    </tbody>
  </table>
<% else %>
  <h1>
    Hello there
  </h1>       
<% end %>
