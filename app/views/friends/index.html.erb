<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <div id="friends">
        <% @friends.each do |friend| %>
          <tr>
            <%= render friend %>
            <th>
              <%= link_to "Show this friend", friend %>
            </th>
          </tr>
        <% end %>
    </div>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:'btn btn-secondary'%>
